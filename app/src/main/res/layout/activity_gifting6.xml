<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GiftingActivity6"
    android:background="@color/white">


    <TextView
        android:id="@+id/action_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="arial"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:text="We have emailed you the code for later"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"/>

    <TextView
        android:id="@+id/intro_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/action_introduction"
        android:fontFamily="arial"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:text="Prepare a heartwarming gift by adding a personal message, photos, and videos."
        android:layout_marginTop="15sp"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"/>

    <TextView
        android:id="@+id/intro_exp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intro_question"
        android:fontFamily="arial"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:text="then, share the code below with "
        android:layout_marginTop="10sp"
        android:layout_marginLeft="25sp" />

    <TextView
        android:id="@+id/intro_exp21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intro_question"
        android:fontFamily="verdana"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/intro_exp2"
        android:text=""
        android:layout_marginTop="10sp"
        android:layout_marginLeft="1sp" />


    <TextView
        android:id="@+id/intro_code"
        android:layout_width="wrap_content"
        android:layout_height="200px"
        android:layout_below="@+id/intro_exp21"
        android:fontFamily="verdana"
        android:textSize="35sp"
        android:text=""
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="3sp" />


    <Button
        android:id="@+id/bookAnswer_1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:text="Next"
        android:layout_margin="20dp"
        android:background="@drawable/button_style_four"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"/>



</RelativeLayout>