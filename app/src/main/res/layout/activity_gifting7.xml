<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GiftingActivity7">

    <TextView
        android:id="@+id/intro_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="arial"
        android:textSize="25sp"
        android:text="Create the Perfect Gift and Share Memorable Moments"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"/>


    <Button
        android:id="@+id/bookAnswer_1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/intro_question"
        android:layout_marginTop="100px"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:text="Gift Message"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="normal"
        android:textColor="@color/colorAccent"
        android:fontFamily="arial"
        android:background="@drawable/button_style_four" />

    <Button
        android:id="@+id/bookAnswer_2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/bookAnswer_1"
        android:layout_marginTop="25px"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:text="Invite Family and Friends"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="normal"
        android:textColor="@color/colorAccent"
        android:fontFamily="arial"
        android:background="@drawable/button_style_four" />

    <Button
        android:id="@+id/bookAnswer_3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/bookAnswer_2"
        android:layout_marginTop="25px"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:text="Add Videos and Photos"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="normal"
        android:textColor="@color/colorAccent"
        android:fontFamily="arial"
        android:background="@drawable/button_style_four" />

    <Button
        android:id="@+id/bookAnswer_5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edittext_two_style"
        android:text="Done"
        android:textAllCaps="false" />


</RelativeLayout>