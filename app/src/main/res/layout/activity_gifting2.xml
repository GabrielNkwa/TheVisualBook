<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GiftingActivity2">


    <TextView
        android:id="@+id/action_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="arial"
        android:textAlignment="left"
        android:textSize="22dp"
        android:textStyle="bold"
        android:text="Setting Up a New Book or Received a Gift?"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <TextView
        android:id="@+id/intro_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/action_introduction"
        android:fontFamily="arial"
        android:textAlignment="left"
        android:textStyle="italic"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:text="Before setting up a new book, inviting others, and/or adding your virtual code for gifted books, scan the QR code on the book first."
        android:layout_marginTop="30sp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"/>


    <Button
        android:id="@+id/bookAnswer_1"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_below="@+id/intro_question"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Scan and connect"
        android:layout_marginTop="200dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:background="@drawable/edittext_two_style"/>


</RelativeLayout>